{
  "compilerOptions": {
    /* File layout */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Runtime target */
    "module": "NodeNext",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "types": [
      "node"
    ],
    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* Output */
    "sourceMap": true,
    "declaration": false,
    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    /* Node compatibility */
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}